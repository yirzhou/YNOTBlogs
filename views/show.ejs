<% include ./partials/header %>


<!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4"><%= blog.title %></h1>

          <!-- Author -->
          <p class="lead">
            <i>Created by <u><%= blog.author.username %></u></i>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Originally Posted Time: <span class="date-italic"><i><%= blog.created.toUTCString() %></i></span></p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="<%= blog.image %>" alt="">

          <hr>

          <!-- Post Content -->
          <p class="lead"><%- blog.body %></p>
          
          <% if(currentUser && blog.author.id.equals(currentUser._id) || currentUser == "Yiren") { %>
          <div class="row container">
            <div style="padding-right: 10px;">
              <a class="btn btn-warning" href="/blogs/<%= blog._id %>/edit">Edit</a>
            </div>
                <form id="delete-form" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
          
                    <button class="btn btn-danger">Delete</button>
                </form>
          </div>
          <% } %>
          <br>
          <a href="/blogs"><div class="ui animated button" tabindex="0">
            <div class="visible content">Go Back</div>
            <div class="hidden content">
              <i class="left arrow icon"></i>
            </div>
          </div></a>
          <a 
            style="font-size: 18px;"
            href="https://twitter.com/share"
            data-size="large"
            data-text="custom share text"
            data-url="https://dev.twitter.com/web/tweet-button"
            data-hashtags="YNOT"
            data-via="twitterdev"
            data-related="twitterapi,twitter">
           <button class="ui twitter button mini">
            <i class="twitter icon"></i>
            Tweet
          </button>
          </a>
          
          
          <hr>
          
          <div>
            <h3>Comments</h3>
            <br><br>
            <% if(blog.comments.length == 0) { %>
              <p class="lead" style="font-style: italic; color: #80858e;">Looks like you are the first to comment on it! Do it, please!</p>
            <% } else { %>
              <% blog.comments.reverse().forEach(function(comment){ %>
              <div class="media mb-4">
                <img id="resize" class="d-flex mr-3 rounded-circle" style="width=50px; height=50px;" src="<%= comment.author.portrait %>" alt="">
                <div class="media-body">
                  <h5 class="mt-0"><%= comment.author.username %></h5>
                  <p><%= comment.text %></p>
                  <p><%= comment.created.toUTCString() %></p>
                  
                </div>
              </div>
              <br>
              <% }) }%>
            <a class="btn btn-success" href="/blogs/<%= blog._id %>/comments/new">Add New Comment</a>
          </div>
          <br><br>
        </div>
        <div class="col-md-4">
            
